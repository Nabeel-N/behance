generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String?
  email    String    @unique
  password String
  profilePhoto String?
  projects Project[]
  likes    Like[]
  comments Comment[]
}

model Project {
  id        Int       @id @default(autoincrement())
  published Boolean   @default(false)
  createdAt DateTime  @default(now())
  image     String
  title     String
  description String?
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  likes     Like[]
  comments  Comment[]
  views     Int       @default(0)

  @@index([userId])
}

model Like {
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([userId, projectId])
  @@index([projectId])
}

model Comment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  text      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([projectId])
}


